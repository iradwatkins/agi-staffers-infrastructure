    </div>

    <!-- Deploy Modal -->
    <div id="deployModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-xl shadow-xl p-6 w-full max-w-md mx-4">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">Deploy New Website</h3>
                <button onclick="closeDeployModal()" class="text-gray-400 hover:text-gray-600">
                    <i data-lucide="x" class="w-5 h-5"></i>
                </button>
            </div>
            
            <form id="deployForm" class="space-y-4">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Website Name</label>
                    <input type="text" id="websiteName" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="gangrunprinting">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">App Port</label>
                    <input type="number" id="appPort" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="3003">
                </div>
                
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Database Port</label>
                    <input type="number" id="dbPort" class="w-full border border-gray-300 rounded-md px-3 py-2 focus:ring-2 focus:ring-blue-500 focus:border-blue-500" placeholder="5433">
                </div>
                
                <div class="flex space-x-3 pt-4">
                    <button type="button" onclick="closeDeployModal()" class="flex-1 px-4 py-2 border border-gray-300 text-gray-700 rounded-md hover:bg-gray-50 transition-colors">
                        Cancel
                    </button>
                    <button type="submit" class="flex-1 px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 transition-colors">
                        Deploy
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Status Modal -->
    <div id="statusModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
        <div class="bg-white rounded-xl shadow-xl p-6 w-full max-w-2xl mx-4 max-h-96 overflow-y-auto">
            <div class="flex items-center justify-between mb-4">
                <h3 class="text-lg font-semibold text-gray-900">System Status</h3>
                <button onclick="closeStatusModal()" class="text-gray-400 hover:text-gray-600">
                    <i data-lucide="x" class="w-5 h-5"></i>
                </button>
            </div>
            <div id="statusContent" class="text-sm font-mono bg-gray-50 p-4 rounded-md">
                Loading system status...
            </div>
        </div>
    </div>

    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Modal functions
        function openDeployModal() {
            document.getElementById('deployModal').classList.remove('hidden');
            document.getElementById('deployModal').classList.add('flex');
        }

        function closeDeployModal() {
            document.getElementById('deployModal').classList.add('hidden');
            document.getElementById('deployModal').classList.remove('flex');
        }

        function closeStatusModal() {
            document.getElementById('statusModal').classList.add('hidden');
            document.getElementById('statusModal').classList.remove('flex');
        }

        // Deployment functions
        function deployWebsite(websiteName) {
            const ports = {
                'gangrunprinting': { app: 3003, db: 5433 },
                'uvcoatedclubflyers': { app: 3004, db: 5434 },
                'vaina': { app: 3005, db: 5435 },
                'elarmario': { app: 3006, db: 5436 }
            };
            
            if (ports[websiteName]) {
                document.getElementById('websiteName').value = websiteName;
                document.getElementById('appPort').value = ports[websiteName].app;
                document.getElementById('dbPort').value = ports[websiteName].db;
                openDeployModal();
            }
        }

        // Safety check functions
        function runSafetyCheck() {
            alert('üîç Safety check would run:\n\n‚Ä¢ Scan for port conflicts\n‚Ä¢ Check container names\n‚Ä¢ Verify directory conflicts\n‚Ä¢ Validate configurations\n\nIn the real implementation, this would call your safety scripts!');
        }

        function showWebsiteStatus() {
            document.getElementById('statusModal').classList.remove('hidden');
            document.getElementById('statusModal').classList.add('flex');
            
            // Simulate loading website status
            document.getElementById('statusContent').innerHTML = `
