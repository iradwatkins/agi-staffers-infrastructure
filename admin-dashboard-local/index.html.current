            <div class="px-6 py-4 border-b border-gray-200">
                <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                    <i data-lucide="zap" class="w-5 h-5 mr-2 text-yellow-500"></i>
                    Quick Actions
                </h3>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
                    <button onclick="runSafetyCheck()" class="flex items-center justify-center p-4 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors group">
                        <i data-lucide="shield-check" class="w-6 h-6 text-blue-600 mr-3"></i>
                        <div class="text-left">
                            <p class="font-medium text-blue-900">Safety Check</p>
                            <p class="text-sm text-blue-600">Scan for conflicts</p>
                        </div>
                    </button>
                    
                    <button onclick="showWebsiteStatus()" class="flex items-center justify-center p-4 bg-green-50 hover:bg-green-100 rounded-lg transition-colors group">
                        <i data-lucide="activity" class="w-6 h-6 text-green-600 mr-3"></i>
                        <div class="text-left">
                            <p class="font-medium text-green-900">Status Check</p>
                            <p class="text-sm text-green-600">View all websites</p>
                        </div>
                    </button>
                    
                    <button onclick="openDeployModal()" class="flex items-center justify-center p-4 bg-purple-50 hover:bg-purple-100 rounded-lg transition-colors group">
                        <i data-lucide="plus-circle" class="w-6 h-6 text-purple-600 mr-3"></i>
                        <div class="text-left">
                            <p class="font-medium text-purple-900">New Website</p>
                            <p class="text-sm text-purple-600">Deploy safely</p>
                        </div>
                    </button>
                    
                    <button onclick="showSystemResources()" class="flex items-center justify-center p-4 bg-orange-50 hover:bg-orange-100 rounded-lg transition-colors group">
                        <i data-lucide="bar-chart-3" class="w-6 h-6 text-orange-600 mr-3"></i>
                        <div class="text-left">
                            <p class="font-medium text-orange-900">Resources</p>
                            <p class="text-sm text-orange-600">System metrics</p>
                        </div>
                    </button>
                </div>
            </div>
        </div>

        <!-- System Health -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Recent Activity -->
            <div class="bg-white rounded-xl shadow-sm border">
                <div class="px-6 py-4 border-b border-gray-200">
                    <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                        <i data-lucide="clock" class="w-5 h-5 mr-2 text-gray-500"></i>
                        Recent Activity
                    </h3>
                </div>
                <div class="p-6">
                    <div class="space-y-4">
                        <div class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">SteppersLife.com deployed successfully</p>
                                <p class="text-xs text-gray-500">64 database records migrated ‚Ä¢ 2 hours ago</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">SSL certificate obtained for stepperslife.com</p>
                                <p class="text-xs text-gray-500">Auto-renewal enabled ‚Ä¢ 2 hours ago</p>
                            </div>
                        </div>
                        
                        <div class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-purple-500 rounded-full mt-2"></div>
                            <div>
                                <p class="text-sm font-medium text-gray-900">Safety tools installed</p>
                                <p class="text-xs text-gray-500">7 safety scripts deployed ‚Ä¢ 3 hours ago</p>
                            </div>
                        </div>
                    </div>
